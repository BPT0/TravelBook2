<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9a9a9a"
        tools:context=".start.Register1Activity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp"
            android:text="이메일을 입력해주세요 :)"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/etx_add_text"
            app:layout_constraintStart_toStartOf="@+id/etx_add_text"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etx_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/white"
            android:hint="welcom@naver.com"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:paddingStart="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_complete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/back_lightgray_round_10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="확인"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etx_email" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
